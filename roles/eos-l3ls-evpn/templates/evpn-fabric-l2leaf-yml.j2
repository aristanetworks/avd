{# leaf switch configuration  #}
## Ansible Generated ##

### {{ inventory_hostname }} ###

{# set leaf variables #}
{% set switch = namespace() %}
{% set leaf = namespace() %}
{% for l2leaf_node_group in l2leafs.node_groups | natural_sort %}
{%     for node in l2leafs.node_groups[l2leaf_node_group].nodes | natural_sort %}
{%         if node == inventory_hostname %}
{%             if l2leafs.node_groups[l2leaf_node_group].spanning_tree_priority is defined %}
{%                 set leaf.spanning_tree_priority = l2leafs.node_groups[l2leaf_node_group].spanning_tree_priority %}
{%             else %}
{%                 set leaf.spanning_tree_priority = l2leafs.defaults.spanning_tree_priority %}
{%             endif %}
{%             if l2leafs.node_groups[l2leaf_node_group].platform is defined %}
{%                 set switch.platform = l2leafs.node_groups[l2leaf_node_group].platform %}
{%             else %}
{%                 set switch.platform = l2leafs.defaults.platform %}
{%             endif %}
{%             set leaf.group = l2leaf_node_group %}
{%             set leaf.id = l2leafs.node_groups[l2leaf_node_group].nodes[node].id %}
{%             set leaf.mgmt_ip = l2leafs.node_groups[l2leaf_node_group].nodes[node].mgmt_ip %}
{%             if l2leafs.node_groups[l2leaf_node_group].filter.tenants is defined %}
{%                 set leaf.filter_tenants = l2leafs.node_groups[l2leaf_node_group].filter.tenants %}
{%             else %}
{%                 set leaf.filter_tenants = [ 'all' ] %}
{%             endif %}
{%             if l2leafs.node_groups[l2leaf_node_group].filter.tags is defined %}
{%                 set leaf.filter_tags = l2leafs.node_groups[l2leaf_node_group].filter.tags %}
{%             else %}
{%                 set leaf.filter_tags = [ 'all' ] %}
{%             endif %}
{%             if l2leafs.node_groups[l2leaf_node_group].parent_l3leafs is defined %}
{%                 set leaf.parent_l3leafs = l2leafs.node_groups[l2leaf_node_group].parent_l3leafs %}
{%             else %}
{%                 set leaf.parent_l3leafs = l2leafs.defaults.parent_l3leafs %}
{%             endif %}
{%             if loop.length == 2 %}
{%                 set leaf.mlag = true %}
{%                 set leaf.mlag_group = l2leaf_node_group %}
{%                 if l2leafs.node_groups[l2leaf_node_group].mlag_interfaces is defined %}
{%                     set leaf.mlag_interfaces = l2leafs.node_groups[l2leaf_node_group].mlag_interfaces %}
{%                 else %}
{%                     set leaf.mlag_interfaces = l2leafs.defaults.mlag_interfaces %}
{%                 endif %}
{%                 if loop.index == 1 %}
{%                     set leaf.mlag_role = "primary" %}
{%                     set leaf.mlag_peer = loop.nextitem %}
{%                     set leaf.mlag_ip = (( l2leafs.node_groups[l2leaf_node_group].nodes[node].id -1 ) * 2 ) %}
{%                     set leaf.mlag_peer_ip = ((( l2leafs.node_groups[l2leaf_node_group].nodes[node].id -1 ) * 2 ) +1 ) %}
{%                     set leaf.mlag_peer_id = l2leafs.node_groups[l2leaf_node_group].nodes[loop.nextitem].id %}
{%                 elif loop.index == 2 %}
{%                     set leaf.mlag_role = "secondary" %}
{%                     set leaf.mlag_peer = loop.previtem %}
{%                     set leaf.mlag_ip = ((( l2leafs.node_groups[l2leaf_node_group].nodes[loop.previtem].id -1 ) * 2 ) +1 ) %}
{%                     set leaf.mlag_peer_ip = (( l2leafs.node_groups[l2leaf_node_group].nodes[loop.previtem].id -1 ) * 2 )  %}
{%                     set leaf.mlag_peer_id = l2leafs.node_groups[l2leaf_node_group].nodes[loop.previtem].id  %}
{%                 endif %}
{%             else %}
{%                 set leaf.mlag = false %}
{%             endif %}
{%         endif %}
{%     endfor %}
{% endfor %}
{# get allowed vrfs, svis and vlans from parent L3 Leafs #}
{% set parentl3leaf = namespace() %}
{% for l3leaf_node_group in l3leafs.node_groups | natural_sort %}
{%     for node in l3leafs.node_groups[l3leaf_node_group].nodes | natural_sort %}
{%         if node == leaf.parent_l3leafs[0] %}
{%             if l3leafs.node_groups[l3leaf_node_group].filter.tenants is defined %}
{%                 set parentl3leaf.filter_tenants = l3leafs.node_groups[l3leaf_node_group].filter.tenants %}
{%             else %}
{%                 set parentl3leaf.filter_tenants = [ 'all' ] %}
{%             endif %}
{%             if l3leafs.node_groups[l3leaf_node_group].filter.tags is defined %}
{%                 set parentl3leaf.filter_tags = l3leafs.node_groups[l3leaf_node_group].filter.tags %}
{%             else %}
{%                 set parentl3leaf.filter_tags = [ 'all' ] %}
{%             endif %}
{%         endif %}
{%     endfor %}
{% endfor %}
{# set leaf allowed vrfs, svis and vlans #}
{% set leaf.vrfs = []  %}
{% set leaf.svis = []  %}
{% set leaf.vlans = []  %}
{% for tenant in tenants | natural_sort if tenant in leaf.filter_tenants or "all" in leaf.filter_tenants %}
{%     if tenant in parentl3leaf.filter_tenants or "all" in parentl3leaf.filter_tenants %}
{%         for vrf in tenants[tenant].vrfs | natural_sort %}
{%             for svi in tenants[tenant].vrfs[vrf].svis | natural_sort %}
{%                 for svi_tag in tenants[tenant].vrfs[vrf].svis[svi].tags %}
{%                     if svi_tag in leaf.filter_tags or "all" in leaf.filter_tags %}
{%                         if svi_tag in parentl3leaf.filter_tags or "all" in parentl3leaf.filter_tags %}
{%                             do leaf.vrfs.append( vrf ) %}
{%                             do leaf.svis.append( svi ) %}
{%                             do leaf.vlans.append( svi ) %}
{%                             break %}
{%                         endif %}
{%                     endif %}
{%                 endfor %}
{%             endfor %}
{%         endfor %}
{%     endif %}
{% endfor %}
{% set leaf.vrfs = leaf.vrfs | unique  %}

