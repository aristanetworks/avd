{# Leaf P2P interfaces #}
{%     for uplink_to_spine_interface in leaf.uplink_to_spine_interfaces %}
  {{ uplink_to_spine_interface }}:
    description: P2P_UPLINK_TO_{{ leaf.spines[loop.index0] | upper }}_{{ leaf.spine_interfaces[loop.index0 ] }}
    mtu: {{ p2p_uplinks_mtu }}
    type: routed
    ip_address: {{ underlay_p2p_network_summary | ipaddr('network') | ipmath(((leaf.id -1) * spine.nodes | length * 2) + ( spine.nodes[leaf.spines[loop.index0]].id *2 ) - 1) }}/31
{%     endfor %}